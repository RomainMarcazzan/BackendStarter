// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EnumRole {
  USER
  ADMIN
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  role          EnumRole       @default(USER)
  firstname     String
  lastname      String
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model RefreshToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Truck {
  id          String       @id @default(cuid())
  photo       String?
  title       String
  price       Float
  weight      Float
  description String?
  gearTypes   GearType[]   @relation("TruckGearType")
  engineTypes EngineType[] @relation("TruckEngineType")
  type        TruckType[]  @relation("TruckType")
  options     Option[]     @relation("TruckOption")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum EnumType {
  Fourgon
  Van
}

enum EnumGearType {
  Manuelle
  Automatique
}

model TruckType {
  id     String   @id @default(cuid())
  name   EnumType
  trucks Truck[]  @relation("TruckType")
}

model EngineType {
  id     String  @id @default(cuid())
  name   String  @unique
  trucks Truck[] @relation("TruckEngineType")
}

model GearType {
  id     String       @id @default(cuid())
  name   EnumGearType @unique
  trucks Truck[]      @relation("TruckGearType")
}

model Option {
  id          String   @id @default(cuid())
  photo       String?
  title       String
  price       Float
  weight      Float
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  trucks      Truck[]  @relation("TruckOption")
}
